{
  "name": "advanced-finance-planner",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "npm run dev --workspace=packages/frontend",
    "dev:backend": "npm run dev --workspace=packages/backend",
    "start:backend": "npm run start --workspace=packages/backend",
    "build": "npm run build --workspace=packages/frontend",
    "build:frontend": "npm run build --workspace=packages/frontend",
    "build:backend": "npm run build --workspace=packages/backend",
    "lint": "npm run lint --workspace=packages/frontend",
    "test": "npm run test --workspace=packages/frontend",
    "test:watch": "npm run test:watch --workspace=packages/frontend",
    "preview": "npm run preview --workspace=packages/frontend",
    "vercel-build": "npm run build --workspace=packages/frontend"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "typescript": "^5.5.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
